<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="wrap_content">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginRight="5dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="15dp"
                       android:weightSum="10"
                       >
                       <LinearLayout
                           android:layout_width="0dp"
                           android:background="@drawable/backshapeemptyblue"
                           android:layout_weight="8"
                           android:padding="5dp"
                           android:orientation="horizontal"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/ic_search_color"
                               android:id="@+id/search"

                               android:layout_gravity="center_vertical"
                               />
                           <EditText
                               android:layout_width="match_parent"
                               android:layout_height="42dp"
                               android:background="@null"
                               android:id="@+id/search_text"
                               android:layout_marginStart="5dp"
                               android:hint="@string/search"
                               />
                       </LinearLayout>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_weight="0.9"
                           android:layout_marginStart="2dp"
                           android:id="@+id/favourit"
                           android:layout_gravity="center_vertical"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ic_love"
                           />
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_weight="0.9"
                           android:layout_marginStart="3dp"
                           android:id="@+id/notification"
                           android:layout_gravity="center_vertical"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ic_notification"
                           />
                   </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_marginTop="15dp"
                               android:background="@color/header_gray"
                               android:layout_height="0.5dp"></View>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="210dp"
                               android:layout_below="@id/name"
                               android:background="@drawable/shapea"
                               android:id="@+id/recyclerviewbanner"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="15dp"
                               android:padding="1dp"
                               >

                           </androidx.recyclerview.widget.RecyclerView>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_margin="10dp"
                               android:weightSum="8"
                               >
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="6"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/categorys"
                                   android:fontFamily="@font/taj"
                                   android:textColor="@color/blue"
                                   />
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="5"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/Morecategorys"
                                   android:fontFamily="@font/taj"
                                   android:id="@+id/moreCategory"
                                   android:textColor="@color/orange"
                                   />
                           </LinearLayout>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="135dp"
                               android:layout_below="@id/name"
                               android:id="@+id/recyclerviewCategory"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:padding="1dp"
                               >
                           </androidx.recyclerview.widget.RecyclerView>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_margin="10dp"
                               android:weightSum="8"
                               >
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="6"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/FlashSale"
                                   android:fontFamily="@font/taj"
                                   android:textColor="@color/blue"
                                   />
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="5"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/seeMore"
                                   android:fontFamily="@font/taj"
                                   android:id="@+id/moreFlash"
                                   android:textColor="@color/orange"
                                   />
                           </LinearLayout>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="210dp"
                               android:layout_below="@id/name"
                               android:id="@+id/recyclerviewFlash"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:padding="1dp"
                               >
                           </androidx.recyclerview.widget.RecyclerView>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_margin="10dp"
                               android:weightSum="8"
                               >
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="6"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/Fashion_picks"
                                   android:fontFamily="@font/taj"
                                   android:textColor="@color/blue"
                                   />
                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="5"
                                   android:textStyle="bold"
                                   android:textSize="15dp"
                                   android:text="@string/seeMore"
                                   android:fontFamily="@font/taj"
                                   android:id="@+id/morefashion"
                                   android:textColor="@color/orange"
                                   />
                           </LinearLayout>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="210dp"
                               android:layout_below="@id/name"
                               android:id="@+id/recyclerviewFashion"
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:padding="1dp"
                               >
                           </androidx.recyclerview.widget.RecyclerView>
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:background="@drawable/imagea"
                               >
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:orientation="vertical"
                                   >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_marginTop="40dp"
                                   android:layout_marginStart="30dp"
                                   android:textColor="@color/white"
                                   android:textStyle="bold"
                                   android:text="@string/recommend"
                                   android:fontFamily="@font/taj"
                                   android:textSize="23dp"
                                   android:layout_height="wrap_content" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginStart="30dp"
                                       android:textColor="@color/white"
                                       android:textStyle="bold"
                                       android:text="@string/product"
                                       android:fontFamily="@font/taj"
                                       android:textSize="23dp"
                                       android:layout_height="wrap_content" />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_marginTop="20dp"
                                       android:layout_marginStart="30dp"
                                       android:textColor="@color/whitee"
                                       android:textStyle="bold"
                                       android:text="@string/recommendthat"
                                       android:fontFamily="@font/taj"
                                       android:textSize="15dp"
                                       android:layout_height="wrap_content" />
                               </LinearLayout>

                           </RelativeLayout>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/name"
                               android:id="@+id/recyclerviewfavourit"
                               android:orientation="vertical"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:padding="1dp"
                               >
                           </androidx.recyclerview.widget.RecyclerView>
                       </LinearLayout>
                   </RelativeLayout>
               </ScrollView>
           </RelativeLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar_subject"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="gone" />
</FrameLayout>