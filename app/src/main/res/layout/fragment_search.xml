<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:id="@+id/a"
                           android:layout_height="wrap_content">
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/name"
                               android:id="@+id/recyclerviewfavourit"
                               android:orientation="vertical"
                               android:layout_gravity="center"
                               app:reverseLayout="true"
                               android:layout_centerHorizontal="true"
                               android:layout_marginRight="13dp"
                               android:layout_marginLeft="13dp"
                               android:layout_marginTop="5dp"
                               android:padding="1dp"
                               >
                           </androidx.recyclerview.widget.RecyclerView>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_marginRight="13dp"
                           android:layout_marginLeft="13dp"
                           android:layout_marginTop="5dp"
                           android:layout_below="@+id/a"
                           >
                           <ImageView
                               android:layout_width="150dp"
                               android:layout_height="150dp"
                               android:layout_gravity="center"
                               android:background="@drawable/notfound"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:textStyle="bold"
                               android:textColor="@color/blue"
                               android:fontFamily="@font/taj"
                               android:textSize="25dp"
                               android:text="@string/notfound"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:textStyle="bold"
                               android:textColor="@color/header_gray"
                               android:fontFamily="@font/taj"
                               android:textSize="17dp"
                               android:text="@string/notfoundMssage"
                               />
                           <androidx.appcompat.widget.AppCompatButton
                               android:id="@+id/appCompatButtonRegisterservcies"
                               android:layout_width="match_parent"
                               android:layout_gravity="center"
                               android:layout_height="50dp"
                               android:layout_centerHorizontal="true"
                               android:layout_margin="20dp"
                               android:textSize="20dp"
                               android:textAllCaps="false"
                               android:textColor="@color/white"
                               android:background="@drawable/backshapered"
                               android:text="@string/backhome" />
                       </LinearLayout>
                   </RelativeLayout>
               </ScrollView>
           </RelativeLayout>
    </RelativeLayout>
</FrameLayout>