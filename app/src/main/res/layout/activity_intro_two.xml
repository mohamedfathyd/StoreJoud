<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/introtwo"
    tools:context=".Activity.IntroOne">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:background="@drawable/logocolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/a"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:layout_below="@id/a"
        android:fontFamily="@font/taj"
        android:textStyle="bold"
        android:textSize="31dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/b"
        android:text="Buy everything"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:layout_below="@+id/b"
        android:fontFamily="@font/taj"
        android:id="@+id/d"
        android:textStyle="bold"
        android:textSize="31dp"
        android:layout_centerHorizontal="true"
        android:text="you need from"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:layout_below="@+id/d"
        android:fontFamily="@font/taj"
        android:textStyle="bold"
        android:textSize="31dp"
        android:layout_centerHorizontal="true"
        android:text=" your home"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/taj"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/backshapered"
        android:text="Next" />
</RelativeLayout>