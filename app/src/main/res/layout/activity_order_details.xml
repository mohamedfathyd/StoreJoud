<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.notifications">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:id="@+id/header"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="35dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_left"
                android:id="@+id/back"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="6"
            android:layout_marginStart="5dp"
            android:text="@string/orderdetail"
            android:fontFamily="@font/taj"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="19dp"
            android:id="@+id/name"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:id="@+id/s"
        android:background="@color/header_gray"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/s"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/product"
                android:fontFamily="@font/taj"
                android:textColor="@color/blue"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="250dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:id="@+id/recyclerview3"
                android:layout_gravity="center"
                app:reverseLayout="true"
                android:padding="1dp"
                >

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:weightSum="8"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/detail"
                android:fontFamily="@font/taj"
                android:textColor="@color/blue"
                />

        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/backshapeemptyblue"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:textColor="@color/grey"
                   android:textStyle="bold"
                   android:fontFamily="@font/taj"
                   android:text="@string/dateShipping"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:text=""
                   android:id="@+id/date"
                   android:fontFamily="@font/taj"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:textColor="@color/grey"
                   android:textStyle="bold"
                   android:fontFamily="@font/taj"
                   android:text="@string/phone"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:text=""
                   android:id="@+id/phone"
                   android:fontFamily="@font/taj"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:textColor="@color/grey"
                   android:textStyle="bold"
                   android:fontFamily="@font/taj"
                   android:text="@string/addresses"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textSize="17dp"
                   android:text=""
                   android:id="@+id/address"
                   android:fontFamily="@font/taj"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/backshapeemptyblue"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:fontFamily="@font/taj"
                    android:text="@string/items"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text=""
                    android:id="@+id/items"
                    android:fontFamily="@font/taj"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:fontFamily="@font/taj"
                    android:text="@string/Shipping_tax"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text=""
                    android:id="@+id/shipping"
                    android:fontFamily="@font/taj"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:fontFamily="@font/taj"
                    android:text="@string/total"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text=""
                    android:id="@+id/price"
                    android:fontFamily="@font/taj"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>